{
    // Formatação automática ao salvar para manter o padrão do projeto [3, 7]
    "editor.formatOnSave": true,
    // Esconde pastas de cache e ambiente virtual para limpar o Explorer [4, 8]
    "files.exclude": {
        "**/__pycache__": false,
        "**/.pytest_cache": false,
        "**/.venv": false,
        "**/.git": false
    },
    // Habilita a análise de código e sugestões inteligentes [5, 6]
    "python.analysis.typeCheckingMode": "basic",
    // Seleciona o interpretador Python (o VS Code geralmente detecta o venv do Poetry)
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    // "python.formatting.provider": "black", // Ou 'ruff'/'autopep8'
    "python.formatting.provider": "ruff",
    // Garante que o terminal use o ambiente virtual do Poetry automaticamente [9]
    "python.terminal.activateEnvironment": true,
    "terminal.integrated.profiles.windows": {
        "Git Bash": {
            "path": "C:\\Program Files\\Git\\bin\\bash.exe",
            "icon": "terminal-bash"
        }
    }
}